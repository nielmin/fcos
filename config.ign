{
  "ignition": {
    "version": "3.5.0"
  },
  "passwd": {
    "users": [
      {
        "groups": [
          "wheel"
        ],
        "name": "core",
        "sshAuthorizedKeys": [
          "ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIEr1KZ+SFRgEcIwCLWMp4bUnyJYtEgUSsR9nBHWR6/Vh daniel@ines"
        ]
      }
    ]
  },
  "storage": {
    "directories": [
      {
        "path": "/etc/caddy",
        "mode": 420
      },
      {
        "path": "/etc/caddy/data",
        "mode": 420
      },
      {
        "path": "/etc/caddy/site",
        "mode": 420
      },
      {
        "path": "/etc/caddy/config",
        "mode": 420
      },
      {
        "path": "/etc/caddy/logs",
        "mode": 420
      }
    ],
    "files": [
      {
        "path": "/etc/hostname",
        "contents": {
          "compression": "",
          "source": "data:,fcos"
        },
        "mode": 420
      },
      {
        "path": "/etc/containers/systemd/caddy.container",
        "contents": {
          "compression": "gzip",
          "source": "data:;base64,"
        },
        "mode": 420
      },
      {
        "path": "/etc/caddy/Caddyfile",
        "contents": {
          "compression": "",
          "source": "data:,localhost%0A%0Arespond%20%22Hello%2C%20world!%22%0A"
        }
      }
    ]
  },
  "systemd": {
    "units": [
      {
        "dropins": [
          {
            "contents": "[Timer]\nOnCalendar=hourly\nRandomizedDelaySec=0\n",
            "name": "update-hourly.conf"
          }
        ],
        "enabled": true,
        "name": "podman-auto-update.timer"
      },
      {
        "contents": "[Unit]\nDescription=Reload systemd to pick up Quadlet units\nAfter=network-online.target\nWants=network-online.target\n\n[Service]\nType=oneshot\nExecStart=/usr/bin/systemctl daemon-reload\n\n[Install]\nWantedBy=multi-user.target\n",
        "enabled": true,
        "name": "quadlet-reload.service"
      }
    ]
  }
}
